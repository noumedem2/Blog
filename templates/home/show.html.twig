{% extends 'base.html.twig' %}
{% block title %}
	{{ post.title }}
{% endblock %}
{% block body %}
	<main class="my-4">
		<h1 class="text-left">{{ post.title}}</h1>
		<img class="img-fluid" src="{{ ( post.imageName != null) ? vich_uploader_asset(post) | imagine_filter('medium_thumb') : asset('/images/default/pexels-eberhard-grossgasteiger-844297.jpg') | imagine_filter('medium_thumb') }}" alt="{{ post.title }}"/>
		<p class="mt-2">{{ post.description|raw }}</p>
		<p>{{post.content|raw }}
		</p>
	</main>
{% endblock %}
